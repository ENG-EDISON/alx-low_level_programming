#include "main.h"
/**
 * reverse_array  -  function that reverses the content of an array of integers.
 * @a: pointer of array int
 * @n: the number of elements to swap
 */
void reverse_array(int *a, int n)
{
int i = 0;
int j = 0;
int *init, *final;
int n = 0;
init = a;
final = a;
 n -= 1;
while (i < n)
 {+;
}
while (j <= i)
{
n = *(init + j);
*(init + j) = *(final + i);
*(final + i) = n;
j++;
i--;
}
}

